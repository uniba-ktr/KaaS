{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Laboratory",
  "type": "object",
  "required": ["name", "topo"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "web": {
      "type": "string"
    },
    "topo": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "net"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "mem": {
            "type": "string"
          },
          "cpus": {
            "type": "number"
          },
          "port": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "ipv6": {
            "type": "boolean"
          },
          "exec": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "sysctl": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "env": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "shell": {
            "type": "string"
          },
          "num_terms": {
            "type": "integer"
          },
          "net": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["interface", "domain"],
              "additionalProperties": false,
              "properties": {
                "interface": {
                  "type": "integer"
                },
                "domain": {
                  "type": "string"
                }
              }
            }
          },
          "bridged": {
            "type": "boolean"
          },
          "files": { "$ref": "file:../res/schemas/files.json"}
        }
      }
    },
    "shared": {
      "type": "object",
      "required": ["files"],
      "additionalProperties": false,
      "properties": {
        "files": { "$ref": "file:../res/schemas/files.json"}
      }
    }
  }
}

